<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bbk.ai">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- لو عندك OCR بالكاميرا فعليًا، راح نضيف الكاميرا لاحقًا في manifest & runtime -->
    <!-- <uses-permission android:name="android.permission.CAMERA" /> -->

    <application
        android:label="BBK AI"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|density|uiMode"
            android:hardwareAccelerated="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- محرك Flutter يستخدم هذي الثيمات أثناء الإقلاع -->
        <meta-data
            android:name="io.flutter.embedding.android.NormalTheme"
            android:resource="@style/NormalTheme" />
    </application>
</manifest>
